{
	"name": "dart",
	"displayName": "Dart",
	"description": "Dart support for VSCode",
	"version": "0.1.0",
	"publisher": "kevinplatel",
	"author": {
		"name": "PLATEL KÃ©vin"
	},
	"categories": [
		"Languages",
		"Snippets",
		"Linters"
	],
	"keywords": [
		"Dart",
		"Web"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/platelk/vscode-dart.git"
	},
	"icon": "img/dart-logo.png",
	"galleryBanner": {
		"color": "#006698",
		"theme": "dark"
	},
	"engines": {
		"vscode": "^0.11.0"
	},
	"activationEvents": [
		"onLanguage:dart",
		"workspaceContains:pubspec.yaml"
	],
	"main": "./out/src/extension",
	"contributes": {
		"commands": [
			{
				"command": "dart.pubGet",
				"title": "Pub get"
			},
			{
				"command": "dart.pubBuild",
				"title": "Pub build"
			},
			{
				"command": "dart.pubBuildDebug",
				"title": "Pub build debug"
			},
			{
				"command": "dart.pubRun",
				"title": "Pub run current open document"
			},
			{
				"command": "dart.fmt",
				"title": "Dart format"
			},
			{
				"command": "dart.lint",
				"title": "Dart Linter"
			}
		],
		"keybindings": [
			{
				"command": "dart.pubRun",
				"key": "ctrl+shift+R",
				"mac": "cmd+shift+R"
			},
			{
				"command": "dart.pubBuild",
				"key": "ctrl+shift+B",
				"mac": "cmd.shift+B"
			}
		],
		"languages": [
			{
				"id": "dart",
				"aliases": ["Dart"],
				"extensions": [".dart"]
			}
		],
		"grammars": [
			{
				"language": "dart",
				"path": "./syntaxes/dart.json",
				"scopeName": "source.dart"
			}
		],
		"snippets": [
			{
				"language": "dart",
				"path": "./snippets/dart.json"
			},
			{
				"language": "yaml",
				"path": "./snippets/pubspec.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Dart configuration",
			"properties": {
				"dart.pubPath": {
					"type": "string",
					"description": "path to the pub command",
					"default": "pub"
				},
				"dart.dartPath": {
					"type": "string",
					"description": "path to the dart command",
					"default": "dart"
				},
				"dart.dartiumPath": {
					"type": "string",
					"description": "path the dartium browser, if the value is empty, it will look at $DART_SDK",
					"default": ""
				},
				"dart.dartFmtPath": {
					"type": "string",
					"description": "path of the dartfmt tool",
					"default": "dartfmt"
				},
				"dart.formatOnSave": {
					"type": "boolean",
					"description": "run dartfmt on save",
					"default": true	
				},
				"dart.dartAnalyzerPath": {
					"type": "string",
					"description": "path of the dartanalyzer tool",
					"default": "dartanalyzer"
				},
				"dart.lintOnSave": {
					"type": "boolean",
					"description": "run linter on save",
					"default": true
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "node ./node_modules/vscode/bin/compile",
		"compile": "node ./node_modules/vscode/bin/compile -watch -p ./"
	},
	"devDependencies": {
		"typescript": "^1.7.3",
		"vscode": "^0.11.10"
	}
}